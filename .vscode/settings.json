{
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"source.unusedImports": "explicit",
		"source.organizeImports": "explicit"
	},
	"files.associations": {
		"*.css": "tailwindcss"
	},
	"restoreTerminals.terminals": [
		{
			"splitTerminals": [
				{
					"name": "dev",
					"commands": [
						"sleep 5 && npm run dev -- --host"
					]
				},
				{
					"name": "preview",
					"commands": [
						"sleep 5 && npm run build && npm run obfuscate && npm run preview -- --host"
					]
				}
			]
		},
		{
			"splitTerminals": [
				{
					"name": "bash",
					"commands": [
						"npm install && npm run test"
					]
				}
			]
		},
	]
}